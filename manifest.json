{
  "manifest_version": 2,
  "name": "句子收藏插件",
  "version": "1.0",
  "description": "在网页上收藏句子并保存到 Notion",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
